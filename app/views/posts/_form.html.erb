<%= render "layouts/errors", :object => @post %>

<%= form_for [@category, @post] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :contributor %>
  <%= f.text_field :contributor %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :image %>
  <%= f.text_field :image %>

  <%= f.submit 'Submit', class:'btn btn-success' %>
<% end %>
