<div class='homepage_title'>
  <h1>Shelter Me</h1>
  <p class='title_font'>creative housing ideas</p>
</div>

<hr>

<div class='container_post'>
  <h3>Posts</h3>
  <%= link_to 'Add Post', new_post_path(@post) %>

  <% if @posts.any? %>
    <ul>
      <% @posts.each do |post| %>
        <li><%= link_to post.title, post_path(post) %></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no posts yet.</p>
  <% end %>
</div>


<hr>

<div class='container_category'>
  <div class='col-md-6'>
    <h3>Tags</h3>
    <%= link_to 'Add Tag', new_tag_path(@tag) %>
    <% if @tags.any? %>
      <ul>
        <% @tags.each do |tag| %>
          <li><%= link_to tag.name, tag_path(tag) %></li>
        <% end %>
      </ul>
    <% else %>
      <p>There are no tags yet.</p>
    <% end %>
  </div>


  <div class='col-md-6'>
    <div class='homepage_image'>
      <img src="https://www.glen-l.com/designs/house/house-images/dsn-hfc.jpg">
    </div>
  </div>
</div>
